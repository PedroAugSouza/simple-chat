generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id     String  @id
  role   String  @default("user")
  text   String  @db.Text
  chatId String?
  chat   Chat?   @relation(fields: [chatId], references: [id])
}

model Chat {
  id       String    @id @default(cuid())
  name     String?   @default("New Chat")
  messages Message[]
  user     User?     @relation(fields: [userId], references: [id])
  userId   String?
}

model Settings {
  id     String  @id @default(uuid())
  model  String  @default("claude-3-7-sonnet-latest")
  apiKey String?

  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String
  password String
  settings Settings[]
  chats    Chat[]
}
